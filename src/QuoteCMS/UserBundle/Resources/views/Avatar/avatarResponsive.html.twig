        <source srcset="{{ user.avatar| imagine_filter('avatar_120') }}" media="(min-width: 1200px)">
        <source srcset="{{ user.avatar| imagine_filter('avatar_110') }}" media="(min-width: 1100px)">
        <source srcset="{{ user.avatar| imagine_filter('avatar_100') }}" media="(min-width: 1000px)">
        <source srcset="{{ user.avatar| imagine_filter('avatar_90') }}" media="(min-width: 900px)">
        <source srcset="{{ user.avatar| imagine_filter('avatar_80') }}" media="(min-width: 800px)">
