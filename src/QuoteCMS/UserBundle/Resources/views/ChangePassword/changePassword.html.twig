{% extends "::base.html.twig" %}

{% block container %}
    <div class = "panel panel-info">
        <div class = "panel-heading">
            Modifier mon mot de passe
        </div>
        <div class = "panel-body">
            <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">

                <div class = "form-group">
                    {{ form_label(form.current_password, null, {'label_attr': {'class' : 'control-label col-lg-3'}}) }}
                    <div class="col-lg-8">
                        {{ form_widget(form.current_password, {'attr' : {'class' : 'form-control' }}) }}
                    </div>
                </div>

                <div class = "form-group">
                    {{ form_label(form.new.first, null, {'label_attr': {'class' : 'control-label col-lg-3'}}) }}
                    <div class="col-lg-8">
                        {{ form_widget(form.new.first, {'attr' : {'class' : 'form-control' }}) }}
                    </div>
                </div>

                <div class = "form-group">
                    {{ form_label(form.new.second, null, {'label_attr': {'class' : 'control-label col-lg-3'}}) }}
                    <div class="col-lg-8">
                        {{ form_widget(form.new.second, {'attr' : {'class' : 'form-control' }}) }}
                    </div>
                </div>


                {{ form_rest(form) }}
                <div class ="form-group">
                    <div class = "col-lg-8 col-lg-offset-3">
                        <input class = "btn btn-danger" type="submit" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}" />
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock container %}
{% block title %}{{ parent() }}Modifier mon mot de passe{% endblock %}
{% block keywords %}{% endblock %}
{% block description %}{% endblock %}
