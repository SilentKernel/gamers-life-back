{% extends "::base.html.twig" %}

{% block container %}
    <div class = "panel panel-default">
        <div class = "panel-heading">
            Ajouter un jeu
        </div>
        <div class = "panel-body">
            {{ form_start(form, {'attr' : {'class' : 'form-horizontal', "id" : "addPostForm"}, 'action' : path('quote_cms_game_new') } ) }}

            <div class="col-lg-12">
                {% if form_errors(form.name) != null %}
                    <div class = "col-lg-6 col-lg-offset-3 alert alert-danger">
                        {{ form_errors(form.name) }}
                    </div>
                {% endif %}
            </div>
            <div class = "form-group">
                {{ form_label(form.name,"Nom du Jeu :", {"label_attr" : {'class' : 'control-label col-lg-3'}}) }}
                <div class = "col-lg-8">
                    {{ form_widget(form.name, {"attr" : { "class" : "form-control"}}) }}
                </div>
            </div>

            <div class = "form-group">
                {{ form_label(form.category,"Jeu :", {"label_attr" : {'class' : 'control-label col-lg-3'}}) }}
                <div class = "col-lg-8">
                    {{ form_widget(form.category, {"attr" : { "class" : "form-control"}}) }}
                </div>
                <div class = "col-lg-8 col-lg-offset-3 text-right">
                    <a href="{{ path('quote_cms_category_new') }}" class="btn btn-primary">Nouvelle Cat√©gorie</a>
                </div>
            </div>


            {{ form_rest(form) }}

            <div class = "form-group">
                <div class="col-lg-8 col-lg-offset-3">
                    <input class = "btn btn-default" type="submit" id="_submit" name="_submit" value="Ajouter ce jeu" />
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block title %}{{ parent() }} Ajouter un Jeu{% endblock %}
