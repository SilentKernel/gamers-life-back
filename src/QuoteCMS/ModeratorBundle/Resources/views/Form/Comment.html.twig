{% extends "::base.html.twig" %}

{% block container %}
    <div class = "panel panel-default">
        <div class = "panel-heading">
            Validation de commentaire
        </div>
        <div class = "panel-body">
            {{ form_start(form, {'attr' : {'class' : 'form-horizontal', "id" : "validationPostForm"}, 'action' : path('quote_cms_moderator_comment',{'commentId':comment.id}) } ) }}

            <div class = "form-group">
                {{ form_label(form.validated,"Valider le commentaire : ", {"label_attr" : {'class' : 'control-label col-lg-3'}}) }}
                <div class = "col-lg-8">
                    {{ form_widget(form.validated, {"attr" : { "class" : "form-control", "autocomplete" : "off"}}) }}
                </div>
            </div>

            <div class = "form-group">
                {{ form_label(form.message,"Commentaire :", {"label_attr" : {'class' : 'control-label col-lg-3'}}) }}
                <div class = "col-lg-8">
                    {{ form_widget(form.message, {"attr" : { "class" : "form-control", 'rows' : "10"}}) }}
                </div>
            </div>

            {{ form_rest(form) }}

            <div class = "form-group">
                <div class="col-lg-8 col-lg-offset-3">
                    <input class = "btn btn-default" type="submit" id="_submit" name="_submit" value="Enregistrer" />
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

    {# include 'QuoteCMSPostBundle:Single:singlePart.html.twig'  with {'inList': 'false'} #}

{% endblock %}

{% block title %}{{ parent() }} Validation de commentaire{% endblock %}
